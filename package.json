{
  "name": "chat-assistant",
  "displayName": "Chat Assistant",
  "description": "A VSCode extension that opens a side panel with a ChatGPT-like interface.",
  "version": "1.0.0",
  "type": "commonjs",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onCommand:chatAssistant.open"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chatAssistant.open",
        "title": "Open Chat Assistant"
      }
    ]
  },
  "devDependencies": {
    "vscode": "^1.75.0"
  }
}
